<div class="container">
  <div class='row'>
    <div class='col text-center'>
      <h1>Eat Some Burgers!</h1>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6'>
      <h2>Burgers that are not devoured!</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        {{> burgers/burger-block devoured=false}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class='col-md-6'>
      <h2>Burgers that are devoured</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        {{> burgers/burger-block devoured=true}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
  <div class='row'>
    <div class='col-md-6 offset-md-3'>
      <form class="create-form form-row">
        <div class="form-group col-9">
          <input class='form-control' type="text" id="bu" name="name" placeholder="Burger Name">
        </div>
        <div class='col-3'>
          <button class='btn btn-info' type="submit">Add Burger</button>
        </div>
      </form>
    </div>
  </div>
</div>